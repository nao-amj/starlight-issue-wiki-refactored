---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { BASE_PATH } from '@/config';
---

<BaseLayout title="ページが見つかりません" description="404 Not Found">
  <div class="error-container">
    <div class="error-content">
      <h1>404</h1>
      <h2>ページが見つかりません</h2>
      <p>お探しのページは存在しないか、移動した可能性があります。</p>
      
      <div class="action-links">
        <a href={BASE_PATH + "/"} class="button">ホームに戻る</a>
        <a href={BASE_PATH + "/wiki"} class="button secondary">Wikiページを見る</a>
      </div>
    </div>
    
    <div class="illustration">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 500 500" fill="none">
        <circle cx="250" cy="250" r="200" fill="var(--color-secondary)" fill-opacity="0.3"/>
        <path d="M195 155L305 345" stroke="var(--color-primary)" stroke-width="10" stroke-linecap="round"/>
        <path d="M305 155L195 345" stroke="var(--color-primary)" stroke-width="10" stroke-linecap="round"/>
        <circle cx="250" cy="250" r="180" stroke="var(--color-primary)" stroke-width="5" stroke-dasharray="10 10"/>
      </svg>
    </div>
  </div>
</BaseLayout>

<style>
  .error-container {
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: 4rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .error-content {
    margin-bottom: 3rem;
  }
  
  h1 {
    font-size: 8rem;
    font-weight: 700;
    margin: 0;
    color: var(--color-primary);
    line-height: 1;
  }
  
  h2 {
    font-size: 2rem;
    margin-top: 0;
    margin-bottom: 1.5rem;
    color: var(--color-heading);
  }
  
  p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: var(--color-text);
  }
  
  .action-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }
  
  .button {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    background-color: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .button:hover {
    background-color: var(--color-primary-dark);
  }
  
  .button.secondary {
    background-color: var(--color-secondary);
    color: var(--color-text);
  }
  
  .button.secondary:hover {
    background-color: var(--color-secondary-dark);
  }
  
  .illustration {
    width: 100%;
    max-width: 400px;
    margin-top: 3rem;
  }
  
  @media (max-width: 768px) {
    .error-container {
      padding: 2rem 1rem;
    }
    
    h1 {
      font-size: 6rem;
    }
    
    h2 {
      font-size: 1.5rem;
    }
    
    .action-links {
      flex-direction: column;
    }
    
    .illustration {
      max-width: 300px;
    }
  }
</style>
